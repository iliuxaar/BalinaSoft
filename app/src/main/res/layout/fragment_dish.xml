<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iliuxa.belinasofttestapp.Fragments.DishFragment"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameText"
        android:textColor="@color/place_autocomplete_prediction_primary_text"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.3"/>

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@color/cast_intro_overlay_background_color"
        android:id="@+id/dishImage"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionText"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceText"
            android:layout_weight="1"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightText"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/cast_intro_overlay_background_color"
            android:gravity="right"/>
    </LinearLayout>

</LinearLayout>
